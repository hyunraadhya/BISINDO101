                    android:layout_marginBottom="15dp"
                    />

                <ImageView
                    android:id="@+id/babi"
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:src="@drawable/img_babi"
                    android:layout_marginBottom="15dp"
                    />

                <ImageView
                    android:id="@+id/bebek"
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:src="@drawable/img_bebek"
                    android:layout_marginBottom="15dp"
                    />

                <ImageView
                    android:id="@+id/buaya"
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:src="@drawable/img_buaya"
                    android:layout_marginBottom="15dp"
                    />

                <ImageView
                    android:id="@+id/burung"
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:src="@drawable/img_burung"
                    android:layout_marginBottom="15dp"
                    />

                <ImageView
                    android:id="@+id/cacing"
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
