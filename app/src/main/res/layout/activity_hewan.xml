                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:src="@drawable/img_ulat"
                    android:layout_marginBottom="15dp"
                    />

            </GridLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>