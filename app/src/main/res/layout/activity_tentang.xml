<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Tentang">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/colorPutih"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#0E855D"
            android:padding="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tentang_close"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/back_white"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TENTANG"
                android:textColor="@color/colorPutih"
                android:textSize="35sp" />

        </LinearLayout>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/bisindo_101_v9"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi ini merupakan aplikasi yang berisi Bahasa Isyarat Indonesia (BISINDO). Bisindo yang digunakan pada aplikasi ini menggunakan bisindo Surakarta. Aplikasi ini hanya menampilkan bahasa isyarat dasar Bisindo. Untuk mempelajari bahasa isyarat lebih lanjut, dapat menghubungi pengajar kelas bahasa isyarat di kota kalian"
            android:gravity="center"
            android:textSize="20sp"/>


    </LinearLayout>
</RelativeLayout>